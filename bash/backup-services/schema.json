{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$ref": "#/definitions/backup",
  "definitions": {
    "taritem": {
      "type": "object",
      "properties": {
        "mount_destination": {
          "type": "string"
        },
        "save_data": {
          "type": "boolean"
        },
        "exclude_dirs": {
          "type": "string"
        }
      }
    },
    "tar": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/taritem"
      }
    },
    "mysqldump": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "db_name": {
            "type": "string"
          },
          "db_user": {
            "type": "string"
          },
          "db_pw": {
            "type": "string"
          },
          "mysql_dump_parameter": {
            "type": "string"
          }
        }
      }
    },
    "pgdump": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "include_listed_schemas": {
            "type": "boolean"
          },
          "schemas": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "pg_dump_parameter": {
            "type": "string"
          }
        }
      }
    },
    "pgdumpall": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "pg_dumpall_parameter": {
            "type": "string"
          }
        }
      }
    },
    "postgres": {
      "type": "object",
      "properties": {
        "db_user": {
          "type": "string"
        },
        "db_name": {
          "type": "string"
        },
        "pgdump": {
          "$ref": "#/definitions/pgdump"
        },
        "pgdumpall": {
          "$ref": "#/definitions/pgdumpall"
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "save_service": {
          "type": "boolean",
          "default": true
        },
        "tar": {
          "$ref": "#/definitions/tar"
        },
        "mysql": {
          "$ref": "#/definitions/mysqldump"
        },
        "postgres": {
          "$ref": "#/definitions/postgres"
        }
      }
    },
    "network": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "save_network": {
          "type": "boolean"
        },
        "services": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/service"
          }
        }
      }
    },
    "backup": {
      "type": "object",
      "properties": {
        "backup_path": {
          "type": "string"
        },
        "networks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/network"
          }
        }
      }
    }
  }
}
